<% @user_following.each do |user| %>
  <div class="columns is-mobile is-centered mt-5">
    <div class="column is-half">
      <div class="box">
        <div class="panel-block">
          <article class="media">
            <div class="media-left">
              <figure class="image is-32x32">
                <img src="https://bulma.io/images/placeholders/32x32.png">
              </figure>
            </div>
            <div class="media-content">
              <div class="content">
                <p>
                  <strong><%= link_to user.name, user_path(user.id) %></strong>
                  <small>@<%= user.username %></small>
                </p>
                <% if current_user %>
                  <%= render 'components/follow_btn', user: user %>
                <% end %>
              </div>
            </div>
          </article>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= render 'components/pagination', obj: @user_following %>

<%= link_to 'Back', tweets_path, class: "button is-info ml-5 mt-5" %>
