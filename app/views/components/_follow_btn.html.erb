<% if current_user.following?(user) %>
  <div>
    <%= simple_form_for(current_user.active_relationships.find_by(followee_id: user.id), html: { method: :delete }, local: true) do |f| %>
      <%= f.button :submit, "Unfollow", class: "button is-info" %>
    <% end %>
  </div>
<% else %>
  <div>
    <%= simple_form_for(current_user.active_relationships.build, local: true) do |f| %>
      <div> <%= hidden_field_tag :followee_id, user.id %> </div>
      <%= f.button :submit, "Follow", class: "button is-info" %>
    <% end %>
  </div>
<% end %>